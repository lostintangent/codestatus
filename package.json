{
	"name": "codestatus",
	"displayName": "CodeStatus",
	"publisher": "lostintangent",
	"description": "Synchronize your GitHub profile status based on your VS Code activity.",
	"repository": {
		"type": "git"
	},
	"icon": "icon.png",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:codestatus.updateStatus",
		"onCommand:codestatus.markBusy",
		"onCommand:codestatus.markAvailable"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codestatus.updateStatus",
				"title": "Update Status",
				"category": "CodeStatus"
			},
			{
				"command": "codestatus.markBusy",
				"title": "Mark as Busy",
				"category": "CodeStatus"
			},
			{
				"command": "codestatus.markAvailable",
				"title": "Mark as Available",
				"category": "CodeStatus"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "codestatus.markBusy",
					"when": "!codestatus:isBusy"
				},
				{
					"command": "codestatus.markAvailable",
					"when": "codestatus:isBusy"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"publish": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vsce": "^1.87.1",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	},
	"dependencies": {
		"@octokit/graphql": "^4.6.1",
		"mobx": "^6.1.8"
	}
}
